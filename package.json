{
    "name": "safa-grid",
    "version": "0.1.0",
    "description": "npm package for add reusable layer over grid for Safa company.",
    "private": true,
    "scripts": {
        "dev": "node build-utils/update-index-file.js && vue-cli-service serve",
        "build": "node build-utils/build-lib.js",
        "prepublishOnly": "npm run lint && npm run test && node build-utils/build-lib.js"
    },
    "dependencies": {
        "ag-grid-community": "^21.1.1",
        "ag-grid-vue": "^21.1.0",
        "vue-property-decorator": "^8.2.1"
    },
    "peerDependencies": {
        "vue": ">=2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@vue/cli-plugin-babel": "^3.1.0",
        "@vue/cli-plugin-e2e-cypress": "^3.1.0",
        "@vue/cli-plugin-eslint": "^3.1.0",
        "@vue/cli-plugin-unit-jest": "^3.1.0",
        "@vue/cli-service": "^3.1.0",
        "@vue/component-compiler-utils": "^2.3.0",
        "@vue/eslint-config-prettier": "^4.0.0",
        "@vue/eslint-config-standard": "^4.0.0",
        "@vue/test-utils": "1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^24.1.0",
        "babel-loader": "^8.0.4",
        "cross-env": "^5.2.0",
        "eslint-plugin-vue": "^5.2.2",
        "fs-extra": "^7.0.1",
        "globby": "^9.0.0",
        "imagemin-lint-staged": "^0.4.0",
        "lerna": "^3.4.3",
        "lint-staged": "^8.0.4",
        "lodash": "^4.17.11",
        "markdownlint-cli": "^0.18.0",
        "null-loader": "^0.1.1",
        "rxjs": "^6.3.3",
        "stylelint": "^9.7.1",
        "stylelint-config-css-modules": "^1.3.0",
        "stylelint-config-prettier": "^4.0.0",
        "stylelint-config-recess-order": "^2.0.0",
        "stylelint-config-standard": "^18.2.0",
        "vue": "^2.5.17",
        "vue-template-compiler": "^2.5.17"
    },
    "babel": {
        "presets": [
            [
                "@babel/env",
                {
                    "useBuiltIns": "usage"
                }
            ]
        ]
    },
    "files": [
        "dist/*",
        "doc",
        "*.json",
        "*.js"
    ],
    "keywords": [
        "safa",
        "framework",
        "vuejs",
        "vue",
        "js",
        "desktop",
        "spa"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/penkong/safa-grid.git"
    },
    "author": "mk-nazemi <nazemi.works@gmail.com> (safarayaneh.com)",
    "bugs": {
        "url": "https://github.com/penkong/safa-grid/issues"
    },
    "homepage": "https://github.com/penkong/safa-grid#readme",
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "proseWrap": "never"
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-recess-order",
            "stylelint-config-prettier",
            "stylelint-config-css-modules"
        ],
        "rules": {
            "string-no-newline": null,
            "selector-class-pattern": "^[a-z][a-zA-Z]*(-(enter|leave)(-(active|to))?)?$",
            "selector-id-pattern": "^[a-z][a-zA-Z]*$",
            "selector-max-universal": 1,
            "selector-max-type": [
                0,
                {
                    "ignore": [
                        "child",
                        "descendant",
                        "compounded"
                    ]
                }
            ]
        }
    }
}